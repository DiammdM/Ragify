generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  password  String
  createdAt DateTime @default(now()) @map("createTime")
  updatedAt DateTime @updatedAt @map("updateTime")
  role      String
}

model LibraryDocument {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  size       Int
  status     String   @default("uploaded")
  indexingStage String?
  indexingProgress Int @default(0)
  path       String
  uploadedAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
  chunkCount Int      @default(0)
  lastIndexedAt DateTime?
  embeddingModel String?
}

model ModelSettings {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  modelKey    String
  modelName   String?
  apiKey      String?
  chunkSize   Int
  ollamaHost  String?
  ollamaPort  String?
  ollamaModel String?
  quickPrompt1 String?
  quickPrompt2 String?
  quickPrompt3 String?
  createdAt   DateTime @default(now()) @map("createTime")
  updatedAt   DateTime @updatedAt @map("updateTime")
}
